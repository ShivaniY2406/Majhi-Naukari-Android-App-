<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/text_marathi"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="महाराष्ट्रातील सर्व सरकारी तसेच केंद्र सरकारी नोकरी विषयक मराठी मध्ये माहिती देणारे महाराष्ट्रातील "
        android:textColor="#3d85c6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tag_line"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:text="No.1 App. ! (माझी नोकरी) Majhi Naukari"
        android:textColor="#3d85c6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_marathi" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="283dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>